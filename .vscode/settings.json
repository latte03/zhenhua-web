{
  "prettier.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "files.associations": {
    "*.css": "postcss"
  },
  "editor.formatOnSave": true,
  "i18n-ally.localesPaths": [
    "src/locales"
  ],
  "cSpell.words": [
    "adcode",
    "headlessui"
  ],
  "stylelint.validate": [
    "css",
    "sass",
    "scss",
    "vue"
  ],
  "conventionalCommits.scopes": [
    "page",
    "workflow"
  ],
  "i18n-ally.keystyle": "nested" // 新增修改
}